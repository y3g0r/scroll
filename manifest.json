{
    "manifest_version": 2,
    "version": "0.1",
    "name": "mozreader",
    "browser_specific_settings": {
        "gecko": {
            "id": "mozreader@example.com"
        }
    },
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>",
                "file:///*"
            ],
            "js": ["content.js"]
        }
    ],
    "permissions": [
        "activeTab",
        "downloads",
        "tabs",
        "storage",
        "notifications",
        "clipboardWrite",
        "contextMenus",
        "<all_urls>",
        "https://screenshots.firefox.com/"
    ],
    "browser_action": {
        "default_icon": "icons/reader-32.png",
        "default_title": "Read"
    }
}